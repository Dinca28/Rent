@model RentACars.Models.Car

@{
    ViewData["Title"] = "Delete Car";
}

<h2>Delete Car</h2>

<p>Are you sure you want to delete this car?</p>

<div>
    <strong>Brand:</strong> @Model.Brand <br />
    <strong>Model:</strong> @Model.Model <br />
    <strong>Year:</strong> @Model.Year <br />
    <strong>Price per day:</strong> @Model.PricePerDay <br />
    <strong>Location:</strong> @Model.Location <br />
    <strong>Image:</strong> <img src="@Model.ImageUrl" width="200" />
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Index", "Cars")" class="btn btn-secondary">Cancel</a>
</form>

