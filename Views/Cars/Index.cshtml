@model IEnumerable<RentACars.Models.Car>

<h2>All Cars</h2>

<a class="btn btn-success" href="@Url.Action("PostCar", "Cars")">Post New Car</a>

<table class="table">
    <thead>
        <tr>
            <th>Brand</th>
            <th>Model</th>
            <th>Year</th>
            <th>Price Per Day</th>
            <th>Location</th>
            <th>Image</th>
            <th>Actions</th> <!-- Добавена колона за бутоните -->
        </tr>
    </thead>
    <tbody>
        @foreach (var car in Model)
        {
            <tr>
                <td>@car.Brand</td>
                <td>@car.Model</td>
                <td>@car.Year</td>
                <td>@car.PricePerDay</td>
                <td>@car.Location</td>
                <td>
                    <img src="@Url.Content("~" + car.ImageUrl)" width="100" />
                </td>
                <td>
                    <!-- Бутон за детайли -->
                    <a href="@Url.Action("Details", "Cars", new { id = car.Id })" class="btn btn-info">Details</a>

                    <!-- Бутон за редактиране -->
                    <a href="@Url.Action("Edit", "Cars", new { id = car.Id })" class="btn btn-warning">Edit</a>

                    <!-- Бутон за изтриване -->
                    <a href="@Url.Action("Delete", "Cars", new { id = car.Id })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
